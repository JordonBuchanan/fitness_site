<% include partials/header %>

<div class="container createPost">
    <div class="row">
        <div class="col-sm-12">
            <h1>Create a New Blog Post:</h1>
            <form action="/blog" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="name" value="" class="form-control" placeholder="First Name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="textField" value="" id="textField" rows="3" placeholder="Body" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary btn-lg btn-block">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include partials/footer %>